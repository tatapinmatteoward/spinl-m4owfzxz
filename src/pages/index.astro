---
import Layout from '../layouts/Layout.astro';

const features = [
  {
    icon: 'fas fa-chess',
    title: 'Expert-Led Courses',
    text: 'Learn from industry pros who break down complex rules into simple, actionable steps.'
  },
  {
    icon: 'fas fa-gamepad',
    title: 'Interactive Simulations',
    text: 'Practice in a risk-free environment with real-time feedback to build your edge.'
  },
  {
    icon: 'fas fa-chart-line',
    title: 'Strategic Mastery',
    text: 'Go beyond basicsâ€”discover proven tactics to boost your odds and minimize losses.'
  }
];

const games = [
  { name: 'Roulette', color: 'from-red-600 to-red-800' },
  { name: 'Blackjack', color: 'from-yellow-600 to-yellow-800' },
  { name: 'Slots', color: 'from-blue-600 to-blue-800' },
  { name: 'Poker', color: 'from-green-600 to-green-800' }
];

const testimonials = [
  {
    quote: 'This academy transformed how I play. I went from losses to wins!',
    author: 'Michael T.',
    role: 'Regular Student'
  },
  {
    quote: 'The interactive simulations helped me master blackjack strategies in weeks.',
    author: 'Sarah J.',
    role: 'Advanced Learner'
  },
  {
    quote: 'Finally a place where I understand casino fundamentals without the fluff.',
    author: 'David R.',
    role: 'Beginner'
  }
];
---

<Layout title="Welcome to Spin & Learn Academy" description="Dive into the exciting world of casino gaming with Spin & Learn Academy. Our bold, energetic approach helps you master fundamentals, build strategies, and gain confidence to play smarter and win bigger.">
  <!-- Hero Section -->
  <div class="relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-r from-[#b71c1c] via-[#d32f2f] to-[#b71c1c] opacity-90"></div>
    <div class="absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"%3E%3Cg fill="none" fill-rule="evenodd"%3E%3Cg fill="%23ffffff" fill-opacity="0.05"%3E%3Ccircle cx="30" cy="30" r="2"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E')]"></div>
    
    <div class="relative container mx-auto px-4 py-24 md:py-32">
      <div class="flex flex-col md:flex-row items-center">
        <div class="md:w-1/2 mb-10 md:mb-0">
          <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 leading-tight">
            Welcome to <span class="text-[#ff6b35]">Spin & Learn</span> Academy
          </h1>
          <p class="text-xl text-white mb-8 max-w-lg">
            Dive into the exciting world of casino gaming with our bold, energetic approach to mastering fundamentals, building strategies, and gaining confidence.
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="/courses" class="bg-[#ff6b35] hover:bg-[#ff8c5a] text-white font-bold py-3 px-8 rounded-full text-center transition-all duration-300 transform hover:scale-105 shadow-lg">
              Explore Courses
            </a>
            <a href="/about" class="bg-transparent border-2 border-white text-white hover:bg-white hover:text-[#b71c1c] font-bold py-3 px-8 rounded-full text-center transition-all duration-300">
              Learn More
            </a>
          </div>
        </div>
        <div class="md:w-1/2 flex justify-center">
          <div class="relative">
            <div class="w-64 h-64 md:w-80 md:h-80 bg-[#ff6b35] rounded-full absolute -top-6 -left-6 opacity-20 animate-pulse"></div>
            <div class="w-64 h-64 md:w-80 md:h-80 bg-[#b71c1c] rounded-full absolute -bottom-6 -right-6 opacity-20 animate-pulse delay-1000"></div>
            <div class="relative bg-gradient-to-br from-[#ff6b35] to-[#b71c1c] border-4 border-white rounded-2xl p-6 shadow-2xl transform rotate-6">
              <div class="bg-white rounded-lg p-4 h-48 flex items-center justify-center">
                <div class="text-center">
                  <i class="fas fa-dice text-5xl text-[#b71c1c] mb-2"></i>
                  <h3 class="font-bold text-lg text-gray-800">Master Casino Fundamentals</h3>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Features Section -->
  <section class="py-16 bg-gradient-to-b from-white to-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Why Choose Spin & Learn Academy?</h2>
        <div class="w-24 h-1 bg-[#ff6b35] mx-auto"></div>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {features.map((feature, index) => (
          <div 
            key={index} 
            class="bg-white rounded-xl shadow-xl p-8 transform transition-all duration-300 hover:scale-105 hover:shadow-2xl border-t-4 border-[#ff6b35]"
          >
            <div class="w-16 h-16 bg-[#b71c1c] rounded-full flex items-center justify-center mb-6">
              <i class={`${feature.icon} text-white text-2xl`}></i>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-3">{feature.title}</h3>
            <p class="text-gray-600">{feature.text}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Games Section -->
  <section class="py-16 bg-gradient-to-r from-[#b71c1c] to-[#d32f2f]">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Master Every Game</h2>
        <p class="text-white text-lg max-w-2xl mx-auto">From classic roulette to modern poker, we cover it all with expert strategies and real-world insights.</p>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        {games.map((game, index) => (
          <div 
            key={index} 
            class={`rounded-xl p-6 text-center transform transition-all duration-300 hover:scale-110 ${game.color} text-white shadow-lg`}
          >
            <div class="text-4xl mb-4">
              <i class="fas fa-dice"></i>
            </div>
            <h3 class="text-xl font-bold">{game.name}</h3>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">What Our Students Say</h2>
        <div class="w-24 h-1 bg-[#ff6b35] mx-auto"></div>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {testimonials.map((testimonial, index) => (
          <div 
            key={index} 
            class="bg-white rounded-xl shadow-lg p-8 border-l-4 border-[#ff6b35] transform transition-all duration-300 hover:shadow-xl"
          >
            <div class="text-yellow-400 mb-4">
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
            </div>
            <p class="text-gray-700 italic mb-6">"{testimonial.quote}"</p>
            <div>
              <p class="font-bold text-gray-900">{testimonial.author}</p>
              <p class="text-gray-500 text-sm">{testimonial.role}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-r from-[#b71c1c] to-[#d32f2f]">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">Ready to Master Casino Fundamentals?</h2>
      <p class="text-xl text-white max-w-2xl mx-auto mb-10">Join thousands of students who have transformed their casino experience with our proven strategies</p>
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <a href="/join" class="bg-[#ff6b35] hover:bg-[#ff8c5a] text-white font-bold py-4 px-10 rounded-full text-lg transition-all duration-300 transform hover:scale-105 shadow-lg">
          Start Learning Today
        </a>
        <a href="/free-demo" class="bg-transparent border-2 border-white text-white hover:bg-white hover:text-[#b71c1c] font-bold py-4 px-10 rounded-full text-lg transition-all duration-300">
          Free Demo Class
        </a>
      </div>
    </div>
  </section>
</Layout>