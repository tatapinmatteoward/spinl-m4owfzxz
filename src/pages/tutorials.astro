---
import Layout from '../layouts/Layout.astro';

const tutorials = [
  {
    id: 1,
    title: "Blackjack Basics",
    description: "Learn the ropes of this classic card game",
    content: [
      { bullet: "Objective", text: "Get closer to 21 than the dealer without busting." },
      { bullet: "Key Strategies", text: "When to hit, stand, double down, or split." },
      { bullet: "Pro Tip", text: "Always assume the dealer's hole card is a 10—it's a game-changer!" }
    ],
    icon: "fas fa-credit-card"
  },
  {
    id: 2,
    title: "Roulette Essentials",
    description: "Spin the wheel with excitement",
    content: [
      { bullet: "Bet Types", text: "Inside bets for high risk/high reward, outside bets for safer play." },
      { bullet: "The European Wheel", text: "Only one zero - reduces house edge significantly." },
      { bullet: "Pro Tip", text: "Focus on outside bets for consistent wins over time." }
    ],
    icon: "fas fa-dice"
  },
  {
    id: 3,
    title: "Slot Machine Mastery",
    description: "Unlock the secrets of spinning big wins",
    content: [
      { bullet: "Paylines", text: "Understand how symbols align to create winning combinations." },
      { bullet: "Volatility", text: "Choose games that match your risk tolerance and bankroll." },
      { bullet: "Pro Tip", text: "Set a budget and stick to it - never chase losses." }
    ],
    icon: "fas fa-coins"
  }
];

const featuredTutorials = [
  { 
    id: 1, 
    title: "Blackjack Strategy Guide", 
    duration: "45 min", 
    level: "Beginner",
    description: "Master the art of card counting and basic strategy"
  },
  { 
    id: 2, 
    title: "Roulette Betting Systems", 
    duration: "38 min", 
    level: "Intermediate",
    description: "Learn the Martingale, Fibonacci, and D'Alembert systems"
  },
  { 
    id: 3, 
    title: "Progressive Jackpots", 
    duration: "52 min", 
    level: "Advanced",
    description: "How to maximize your chances with progressive games"
  }
];
---

<Layout title="Tutorials: Master Casino Games with Confidence" description="Dive into our comprehensive tutorials at Spin & Learn Academy. Learn the fundamentals of popular casino games like blackjack, roulette, and slots with bold strategies and energetic tips to build your skills and play smarter.">
  <!-- Hero Section -->
  <div class="relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-r from-primary to-accent opacity-90"></div>
    <div class="absolute inset-0 bg-[url('data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHdpZHRoPSI2MCIgaGVpZ2h0PSI2MCI+CjxyZWN0IHdpZHRoPSI2MCIgaGVpZ2h0PSI2MCIgZmlsbD0ibm9uZSIvPgo8cGF0aCBkPSJNMCAwTDYwIDYwTTYwIDBMMCA2MCIgc3Ryb2tlPSJ3aGl0ZSIgc3Ryb2tlLXdpZHRoPSIwLjUiIG9wYWNpdHk9IjAuMSIvPgo8L3N2Zz4=')]" opacity="0.05"></div>
    <div class="container mx-auto px-4 py-24 md:py-32 relative z-10">
      <div class="max-w-3xl">
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 leading-tight">
          Tutorials: Master Casino Games with Confidence
        </h1>
        <p class="text-xl md:text-2xl text-white/90 mb-8 font-light">
          Dive into our comprehensive tutorials at Spin & Learn Academy. Learn the fundamentals of popular casino games like blackjack, roulette, and slots with bold strategies and energetic tips to build your skills and play smarter.
        </p>
        <div class="flex flex-wrap gap-4">
          <button class="bg-white text-primary font-bold py-3 px-8 rounded-full shadow-lg hover:bg-gray-100 transition-all duration-300 transform hover:-translate-y-1">
            Start Learning
          </button>
          <button class="border-2 border-white text-white font-bold py-3 px-8 rounded-full hover:bg-white hover:text-primary transition-all duration-300">
            View All Tutorials
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Discover Section -->
  <section class="py-16 bg-gradient-to-b from-gray-50 to-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-primary mb-4">Discover Our Tutorials</h2>
        <div class="w-24 h-1 bg-accent mx-auto"></div>
      </div>
      
      <div class="max-w-4xl mx-auto bg-white rounded-2xl shadow-xl p-8 md:p-12 border border-gray-100">
        <p class="text-lg text-gray-700 mb-6 leading-relaxed">
          Welcome to the <span class="font-bold text-primary">Tutorials</span> section of Spin & Learn Academy! Here, you'll master casino fundamentals with confidence and strategy. Our bold, energetic approach makes learning fun and effective, turning beginners into savvy players.
        </p>
        <p class="text-lg text-gray-700 leading-relaxed">
          Whether you're spinning slots or hitting the blackjack table, our step-by-step guides cover everything from basic rules to advanced tactics. With expert insights and practical strategies, you'll build your skills and play smarter.
        </p>
      </div>
    </div>
  </section>

  <!-- Featured Tutorials Grid -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-primary mb-4">Featured Tutorials</h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">Master the games that define casino success</p>
        <div class="w-24 h-1 bg-accent mx-auto mt-4"></div>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        {tutorials.map((tutorial) => (
          <div key={tutorial.id} class="bg-white rounded-2xl shadow-lg overflow-hidden border border-gray-100 transition-all duration-300 hover:shadow-xl hover:-translate-y-2">
            <div class="p-6">
              <div class="flex items-center mb-4">
                <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center text-primary mr-4">
                  <i class={tutorial.icon}></i>
                </div>
                <h3 class="text-xl font-bold text-gray-800">{tutorial.title}</h3>
              </div>
              <p class="text-gray-600 mb-6">{tutorial.description}</p>
              <ul class="space-y-3">
                {tutorial.content.map((item, index) => (
                  <li key={index} class="flex">
                    <span class="font-bold text-accent mr-2">{item.bullet}:</span>
                    <span class="text-gray-700">{item.text}</span>
                  </li>
                ))}
              </ul>
            </div>
            <div class="bg-gray-50 px-6 py-4 border-t border-gray-100">
              <button class="w-full text-center text-primary font-bold py-2 rounded-lg hover:bg-primary hover:text-white transition-colors duration-300">
                Access Tutorial
              </button>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Learning Path -->
  <section class="py-16 bg-gradient-to-r from-primary to-accent">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Your Learning Path</h2>
        <p class="text-xl text-white/90 max-w-2xl mx-auto">Progress from beginner to expert with our structured approach</p>
        <div class="w-24 h-1 bg-white mx-auto mt-4"></div>
      </div>
      
      <div class="max-w-5xl mx-auto">
        <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-8 border border-white/20">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {featuredTutorials.map((tutorial) => (
              <div key={tutorial.id} class="bg-white/5 rounded-xl p-6 border border-white/10 hover:bg-white/10 transition-all duration-300">
                <div class="flex justify-between items-start mb-4">
                  <h3 class="text-xl font-bold text-white">{tutorial.title}</h3>
                  <span class={`text-xs px-2 py-1 rounded-full ${
                    tutorial.level === "Beginner" ? "bg-green-500/20 text-green-300" : 
                    tutorial.level === "Intermediate" ? "bg-yellow-500/20 text-yellow-300" : 
                    "bg-red-500/20 text-red-300"
                  }`}>
                    {tutorial.level}
                  </span>
                </div>
                <p class="text-white/80 text-sm mb-4">{tutorial.description}</p>
                <div class="flex justify-between items-center">
                  <span class="text-white/70 text-sm flex items-center">
                    <i class="fas fa-clock mr-1"></i> {tutorial.duration}
                  </span>
                  <button class="text-accent font-semibold text-sm hover:text-white transition-colors">
                    Start Learning →
                  </button>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-br from-gray-900 to-black">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-5xl font-bold text-white mb-6">Ready to Master the Casino?</h2>
      <p class="text-xl text-gray-300 max-w-3xl mx-auto mb-10">
        Join thousands of players who've transformed their casino experience through our expert tutorials
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <button class="bg-white text-primary font-bold py-4 px-10 rounded-full shadow-lg hover:bg-gray-100 transition-all duration-300 transform hover:-translate-y-1 text-lg">
          Explore All Tutorials
        </button>
        <button class="bg-transparent border-2 border-white text-white font-bold py-4 px-10 rounded-full hover:bg-white hover:text-primary transition-all duration-300 text-lg">
          Free Trial Available
        </button>
      </div>
    </div>
  </section>
</Layout>