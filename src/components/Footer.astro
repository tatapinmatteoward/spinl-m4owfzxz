---
const currentYear = new Date().getFullYear();
const socialLinks = [
  { icon: 'fab fa-facebook', url: '#' },
  { icon: 'fab fa-twitter', url: '#' },
  { icon: 'fab fa-instagram', url: '#' },
  { icon: 'fab fa-youtube', url: '#' }
];
---

<footer class="bg-[#b71c1c] text-white py-8">
  <div class="container mx-auto px-4 text-center">
    <p class="text-lg font-bold">Spin & Learn Academy</p>
    <p class="mt-2">&copy; {currentYear} Spin & Learn Academy. All rights reserved.</p>
    <div class="flex justify-center gap-6 mt-4">
      {socialLinks.map((link) => (
        <a href={link.url} class="text-white hover:text-[#ff6b35] transition-colors duration-300">
          <i class={link.icon}></i>
        </a>
      ))}
    </div>
  </div>
</footer>