---
// Frontmatter
const navItems = [
  { href: '/', label: 'Home' },
  { href: '/beginners-guide', label: 'Beginners Guide' },
  { href: '/tutorials', label: 'Tutorials' },
  { href: '/game-rules', label: 'Game Rules' },
  { href: '/risk-management', label: 'Risk Management' },
  { href: '/bonuses', label: 'Bonuses' }
];
---

<nav class="bg-[#b71c1c] shadow-lg">
  <div class="container mx-auto px-4 py-4">
    <div class="flex justify-between items-center">
      <a href="/" class="text-2xl font-bold text-white hover:text-[#ff6b35] transition-colors">Spin & Learn Academy</a>
      
      <!-- Desktop Menu -->
      <div class="hidden md:flex gap-6">
        {navItems.map((item) => (
          <a 
            href={item.href} 
            class="text-white hover:text-[#ff6b35] font-bold transition-colors"
          >
            {item.label}
          </a>
        ))}
      </div>
      
      <!-- Mobile Menu Button -->
      <button id="mobile-menu-button" class="md:hidden text-white">
        <i class="fas fa-bars text-2xl"></i>
      </button>
    </div>
    
    <!-- Mobile Menu (hidden by default) -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 flex flex-col gap-4">
      {navItems.map((item) => (
        <a 
          href={item.href} 
          class="text-white hover:text-[#ff6b35] font-bold py-2 px-4 rounded transition-colors"
        >
          {item.label}
        </a>
      ))}
    </div>
  </div>
</nav>

<!-- Client-side JavaScript for mobile toggle -->
<script>
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');
  button?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>